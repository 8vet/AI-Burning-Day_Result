<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/targetTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="120dp"
        android:layout_marginLeft="10dp"
        android:text="상대방 이름 설정"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/userTextView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="username"
        android:layout_below="@+id/targetTextView" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/targetEditText"
        android:layout_centerHorizontal="true"
        android:hint="상대방 이름 입력"
        android:layout_below="@+id/targetTextView"
        android:layout_marginTop="30dp" />


    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="전화 걸기"
        android:id="@+id/callButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/targetEditText"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="사용자 변경"
        android:id="@+id/changeUser"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/callButton"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>